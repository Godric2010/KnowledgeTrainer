<Window x:Name="Window" x:Class="KnowledgeTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnowledgeTrainer" xmlns:viewmodels="clr-namespace:KnowledgeTrainer.MVVMNavigation.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="Knwoledge Trainer" Height="450" Width="800" >

    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                <GradientStop Color="#CDFDA569" Offset="0"/>
                <GradientStop Color="#FFF8A96B" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <!--<Viewbox>-->
                <ContentControl Content="{Binding CurrentPageViewModel}"/>
            <!--</Viewbox>-->
        </Grid>
    </Border>
</Window>
